<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>homepageControl</servlet-name>
        <servlet-class>control.homepageControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartListControl</servlet-name>
        <servlet-class>control.cartListControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginControl</servlet-name>
        <servlet-class>control.loginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerControl</servlet-name>
        <servlet-class>control.registerControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartInsertControl</servlet-name>
        <servlet-class>control.cartInsertControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartCheckOutControl</servlet-name>
        <servlet-class>control.cartCheckOutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartRemoveControl</servlet-name>
        <servlet-class>control.cartRemoveControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>customerSearchControl</servlet-name>
        <servlet-class>control.customerSearchControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageControl</servlet-name>
        <servlet-class>control.manageControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookAddControl</servlet-name>
        <servlet-class>control.bookAddControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homepageControl</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartListControl</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerControl</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartInsertControl</servlet-name>
        <url-pattern>/cartInsert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartCheckOutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartRemoveControl</servlet-name>
        <url-pattern>/cartRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>customerSearchControl</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageControl</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookAddControl</servlet-name>
        <url-pattern>/bookAdd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
